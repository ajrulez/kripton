<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    android:paddingTop="8dp">

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:srcCompat="@drawable/ic_account_circle_blue_grey_400_48dp"
        android:id="@+id/ivUser"
        android:layout_marginRight="16dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp">

            <TextView
                style="@style/RobotoLabelViewStyle"
                android:text="@string/quickstart_username_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvLblUsername"/>

            <TextView
                android:text="tvUsername"
                style="@style/RobotoTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvUsername"
                android:paddingBottom="4dp" />

            <TextView
                style="@style/RobotoLabelViewStyle"
                android:text="@string/quickstart_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvLblName" />

            <TextView
                android:text="tvName"
                style="@style/RobotoTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvName"
                android:paddingBottom="4dp" />

            <TextView
                style="@style/RobotoLabelViewStyle"
                android:text="@string/quickstart_phone_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvLblPhone"
                />

            <TextView
                android:text="tvPhone"
                style="@style/RobotoTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvPhone"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingBottom="4dp" />


            <TextView
                style="@style/RobotoLabelViewStyle"
                android:text="@string/quickstart_email_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvLblEmail"
                />

            <TextView
                android:text="tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvEmail"
                style="@style/RobotoTextViewStyle"
                android:paddingBottom="4dp" />


            <TextView
                style="@style/RobotoLabelViewStyle"
                android:text="@string/quickstart_address_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvLblAddress"
                />

            <TextView
                android:text="tvAddress"
                style="@style/RobotoTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvAddress"
                android:paddingBottom="4dp" />


            <TextView
                style="@style/RobotoLabelViewStyle"
                android:text="@string/quickstart_company_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvLblCompany"
                />

            <TextView
                android:text="tvCompany"
                style="@style/RobotoTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvCompany"
                android:paddingBottom="4dp" />


            <TextView
                style="@style/RobotoLabelViewStyle"
                android:text="@string/quickstart_website_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvLblWebsite" />

            <TextView
                android:text="tvWebsite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/RobotoTextViewStyle"
                android:id="@+id/tvWebsite"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_gravity="end"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

            <ImageButton
            android:id="@+id/btnUserActionAlbum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_collections_blue_grey_400_24dp"
            android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
                android:layout_marginRight="16dp" />

            <ImageButton
                android:id="@+id/btnUserActionTodo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_format_list_bulleted_blue_grey_400_24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="16dp" />

            <ImageButton
                android:id="@+id/btnUserActionPost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_comment_blue_grey_400_24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="16dp" />
        </LinearLayout>

    </FrameLayout>


</LinearLayout>
